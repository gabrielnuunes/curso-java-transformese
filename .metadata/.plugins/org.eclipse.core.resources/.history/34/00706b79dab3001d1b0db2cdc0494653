package controle;

public class IfElse {

	public static void main(String[] args) {
		
		double idade = 15;
		//condição ou verificação	
		// SE SENÃO
		
		if (idade >= 18) {
			System.out.println("A pessoa é maior de 18 ou tem 18 anos");
		} else {
			System.out.println("A pessoa é menor de idade!");
		}
		
		
	}
	
}
